extends base

block content 
	section#products.section.all-products
		.top.container
			h1 Vegtables Market
			form
				select
					option(value='1') Defualt Sorting
					option(value='2') Sort By Price
					option(value='3') Sort By Popularity
					option(value='4') Sort By Sale
					option(value='5') Sort By Rating
				span
					i.bx.bx-chevron-down
		.product-center.container
			each vegetable in vegetables
				.product-item
					.overlay
						a.product-thumb(href=`/product/${slug}`)
							img(src=`./images/vegtables/${vegetable.photo}` alt='')
						span.discount= `${vegetable.priceDiscount}%`
					.product-info
						span= vegetable.name
						a(href=`/product/${vegetable.slug}`)=`Freshly Harvested ${vegetable.name}` 
						h4=`â‚± ${vegetable.price}`
					ul.icons
						li
							i.bx.bx-heart
						li
							i.bx.bx-search
						li
							i.bx.bx-cart
